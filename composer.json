{
  "name": "mk/form",
  "description": "A powerful form backend system for Laravel with fluent API, validation, and HTTP endpoints",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Malik Krehic",
      "email": "malik.krehic@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^12.0",
    "illuminate/http": "^12.0",
    "illuminate/routing": "^12.0",
    "illuminate/validation": "^12.0",
    "spatie/laravel-data": "^4.0"
  },
  "require-dev": {
    "pestphp/pest": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "Mk\\Form\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mk\\Form\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mk\\Form\\FormServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "test-unit": "vendor/bin/pest tests/Unit",
    "test-feature": "vendor/bin/pest tests/Feature",
    "test-parallel": "vendor/bin/pest --parallel",
    "analyse": "vendor/bin/phpstan analyse",
    "format": "vendor/bin/php-cs-fixer fix"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
